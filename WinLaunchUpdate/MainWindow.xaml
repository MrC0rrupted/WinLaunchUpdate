<Window x:Class="WinLaunchUpdate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinLaunchUpdate"
        mc:Ignorable="d"
        Title="WinLaunch Update"  Width="389" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock x:Name="tbStatus" Grid.Row="0" Text="Updating..." VerticalAlignment="Center"/>

        <ProgressBar x:Name="pbProgress" Grid.Row="1" Height="30"/>
    </Grid>
</Window>
